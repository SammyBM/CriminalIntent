<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/crime_title"
        android:layout_width="267dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="Crime Title"
        app:layout_constraintEnd_toStartOf="@+id/solved_image"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/crime_date"
        android:layout_width="243dp"
        android:layout_height="22dp"
        android:layout_margin="10dp"
        android:text="Crime Date"
        app:layout_constraintEnd_toStartOf="@+id/solved_image"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crime_title"></TextView>

    <!-- Serious logo -->

    <ImageView
        android:id="@+id/solved_image"
        android:layout_width="60dp"
        android:layout_height="46dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/crime_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/crime_title"
        app:srcCompat="@drawable/baton_cuffs_logo" />

    <!-- Serious logo -->

    <ImageView
        android:id="@+id/serious_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/crime_date"
        app:layout_constraintEnd_toStartOf="@+id/solved_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/crime_title"
        app:layout_constraintTop_toBottomOf="@+id/crime_title"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/btn_star_big_on" />


</androidx.constraintlayout.widget.ConstraintLayout>
